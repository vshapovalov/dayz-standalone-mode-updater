[Unit]
Description=DayZ Mod Updater Daemon
After=network-online.target
Wants=network-online.target

[Service]
Type=simple
WorkingDirectory=/opt/dayzmods
ExecStart=/opt/dayzmods/dayzmods run --config /etc/dayzmods/config.json
Restart=always
RestartSec=5
User=dayzmods
Group=dayzmods
NoNewPrivileges=true
PrivateTmp=true
ProtectSystem=full
ProtectHome=true
ReadWritePaths=/var/lib/dayzmods

[Install]
WantedBy=multi-user.target
